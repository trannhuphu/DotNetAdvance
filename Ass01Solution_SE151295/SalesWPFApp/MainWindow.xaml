<Window x:Class="SalesWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesWPFApp"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TabControl>
                <TabItem x:Name="tabMember" Header="Member Management"></TabItem>
                <TabItem x:Name="tabProduct" Header="Product Management"></TabItem>
                <TabItem x:Name="tabOrder" Header="Order Management"></TabItem>
        </TabControl>
    </Grid>
</Window>

